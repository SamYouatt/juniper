{
  "expo": {
    "name": "Grow Your Words",
    "slug": "juniper",
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/logo-background.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.growyourwords.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
